@import './variables.styl';

.filter-container {
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    max-width: 550px;
    margin: 0 auto;

    [contenteditable='true']:focus {
        border: none !important;
        outline: none !important;
    }

    @media screen and (min-width: 450px) {
        padding: 0 50px;
        max-width: 100%;
    }

    @media screen and (min-width: 1440px) {
        padding: 0;
        max-width: 1440px;
    }
}

.filter-container-inner {
    background: white;
    max-width: 1400px;
    width: 100%;
    display: flex;
    align-items: center;
    border-radius: 10px;
    margin-top: -40px;
}

.filter-container-clear {
    color: $desaturated-dark-cyan;
    padding: 20px 30px;
    font-weight: bold;
    cursor: pointer;
}

.filter-container-items {
    padding: 20px;
    width: 100%;
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.filter-container-item {
    background: $light-grayish-cyan-filter;
    color: $desaturated-dark-cyan;
    display: flex;
    gap: 10px;
    font-size: 15px;
    font-weight: bold;
    border-radius: 4px;
}

.filter-container-item-remove {
    background: $desaturated-dark-cyan;
    padding: 7px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

.filter-container-item-remove:hover {
    background: $very-dark-grayish-cyan;
}

.filter-container-item-title {
    display: flex;
    align-self: center;
    padding-left: 10px;
}

.filter-container-item-empty {
    background: transparent;
    color: $desaturated-dark-cyan;
    font-size: 10px;
    position: relative;
    width: 100%;
}

.filter-search-content {
    position: absolute;
    bottom: 0;
}

.filter-container-item-type-here, .filter-container-item-type-here:active {
    display: inline;
    border: none;
    outline: none;
    padding: 8px 0;
}

.filter-container-item-type-here {
    color: $desaturated-dark-cyan;
    font-size: 15px;
    font-weight: bold;
    width: 100%;
}

.filter-container-item-type-here [contenteditable='true']:focus {
    border: none;
    width: max-content;
    outline: none;
}

.filter-search-content {
    background: white;
}
