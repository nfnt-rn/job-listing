@import './variables.styl';

*, *::after, *::before {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    text-size-adjust: none;
}

body {
    background: $light-grayish-cyan;
    min-height: 100vh;

    @media screen and (max-width: 340px) {
        display: none;
    }
}

[contenteditable='true']:focus {
    border: none !important;
    outline: none !important;
}

.footer {
    text-align: center;
    color: $very-dark-grayish-cyan;
    max-width: 1440px;
    margin: 0 auto;
    padding: 20px 40px 40px;
}

.app {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.app-container-outer {
    height: max-content;
    position: relative;
}

.app-container-list {
    margin-top: 30px;
    position: relative;
}

.app-container {
    background-color: $desaturated-dark-cyan;
    background-image: url('../assets/images/bg-header-mobile.svg');
    height: 200px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: left bottom;

    @media screen and (min-width: 1200px) {
        background-color: $desaturated-dark-cyan;
        background-image: url('../assets/images/bg-header-desktop.svg');
        height: 200px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: left bottom;
    }
}

.card-desktop-container {
    padding-left: 10px;
    padding-right: 10px;

    @media screen and (min-width: 450px) {
        padding-left: 50px;
        padding-right: 50px;
    }
}

.filter-container-search-items {
    position: absolute;
    top: -20px;
    display: flex;
    flex-direction: column;
    gap: 2px;
    box-shadow: 0px 0px 8px hsla($dark-grayish-cyan, 0.5);
    background: white;
    left: 50px;
    flex-wrap: wrap;
    right: 50px;
    font-size: 18px;
    font-weight: bold;
    z-index: 20;
    padding: 2px;
    max-width: 1400px;
    margin: 0 auto;
}

.filter-container-search-item {
    background: $light-grayish-cyan-filter;
    color: $desaturated-dark-cyan;
    padding: 14px 20px;
    border-radius: 7px;
    cursor: pointer;
    transition: all 200ms ease-in-out;

    &:hover {
        color: $light-grayish-cyan-filter;
        background: $desaturated-dark-cyan;
    }
}
